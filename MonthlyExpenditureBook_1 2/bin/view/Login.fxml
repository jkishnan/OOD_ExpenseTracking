<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="30" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <Label text="Login"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin"/>
        <Button text="Sign Up" onAction="#showSignup"/>
    </HBox>
</VBox>
